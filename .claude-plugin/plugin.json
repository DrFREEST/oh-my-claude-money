{
  "name": "oh-my-claude-money",
  "version": "0.2.0",
  "description": "Claude Code 사용량 관리 및 OpenCode 브릿지 - 하이브리드 울트라워크, 자동 위임, 토큰 최적화",
  "author": "user",
  "license": "MIT",
  "homepage": "https://github.com/user/oh-my-claude-money",
  "commands": "./commands",
  "hooks": "./hooks",
  "scripts": "./scripts",
  "agents": "./agents",
  "skills": "./skills",
  "keywords": [
    "usage",
    "rate-limit",
    "opencode",
    "bridge",
    "handoff",
    "cost-management",
    "hybrid-ultrawork",
    "token-optimization",
    "multi-provider"
  ],
  "capabilities": {
    "usageTracking": true,
    "opencodeBridge": true,
    "contextExport": true,
    "autoHandoff": true,
    "hybridUltrawork": true,
    "taskRouting": true,
    "tokenOptimization": true
  },
  "settings": {
    "threshold": {
      "type": "number",
      "default": 90,
      "description": "자동 전환 트리거 임계치 (%)"
    },
    "autoHandoff": {
      "type": "boolean",
      "default": false,
      "description": "임계치 도달 시 자동 전환 (true: 자동, false: 알림만)"
    },
    "keywords": {
      "type": "array",
      "default": ["opencode", "전환", "handoff"],
      "description": "전환 트리거 키워드 목록"
    },
    "routing.enabled": {
      "type": "boolean",
      "default": true,
      "description": "하이브리드 라우팅 활성화"
    },
    "routing.usageThreshold": {
      "type": "number",
      "default": 70,
      "description": "OpenCode 분배 증가 임계치 (%)"
    },
    "routing.maxOpencodeWorkers": {
      "type": "number",
      "default": 3,
      "description": "동시 OpenCode 워커 수"
    },
    "routing.autoDelegate": {
      "type": "boolean",
      "default": true,
      "description": "적합한 작업 자동 위임"
    }
  }
}
