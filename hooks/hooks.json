{
  "description": "oh-my-claude-money - 사용량 관리 및 OpenCode 브릿지 훅",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/pre-tool-enforcer.mjs",
            "timeout": 5,
            "statusMessage": "사용자 질문 알림 중..."
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/context-guard.mjs",
            "timeout": 5,
            "statusMessage": "컨텍스트 가드 검사 중..."
          },
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/fusion-router.mjs",
            "timeout": 120,
            "statusMessage": "퓨전 라우팅 확인 중..."
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/read-optimizer.mjs",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/bash-optimizer.mjs",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/src/hooks/detect-handoff.mjs",
            "timeout": 5,
            "statusMessage": "MCP-First 확인 중..."
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/src/hooks/session-start.mjs",
            "timeout": 8,
            "statusMessage": "사용량 정보 로드 중..."
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/src/hooks/persistent-mode.mjs",
            "timeout": 5,
            "statusMessage": "활성 모드 확인 중..."
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Read|Edit|Bash|Grep|Glob|Task|TaskCreate|TaskUpdate|TaskList|TaskGet",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/tool-tracker.mjs",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "mcp__x__|mcp__g__",
        "hooks": [
          {
            "type": "command",
            "command": "node ${CLAUDE_PLUGIN_ROOT}/hooks/mcp-tracker.mjs",
            "timeout": 10,
            "statusMessage": "MCP 비용 추적 중..."
          }
        ]
      }
    ]
  }
}
